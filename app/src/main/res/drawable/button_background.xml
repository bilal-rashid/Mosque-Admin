<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:padding="8dp" android:shape="rectangle">

            <stroke android:width="2px" android:color="@color/graylight" />

            <corners android:radius="8dp" />
            <gradient android:angle="270" android:endColor="@color/accent" android:startColor="@color/accentlight" />
        </shape>
    </item>

    <item>
        <shape android:padding="8dp" android:shape="rectangle">

            <stroke android:width="2px" android:color="@color/graylight" />

            <corners android:radius="8dp" />
            <gradient android:angle="270" android:endColor="@color/buttonGradientDark" android:startColor="@color/buttonGradientLight" />
        </shape>
    </item>
</selector>